{% extends 'base.html.twig' %}

{% block title %}Citas index{% endblock %}

{% block body %}
    <h1>Citas index</h1>
    <div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Medico</th>
                <th>Paciente</th>
                <th>Identificacion</th>
                <th>Fecha_cita</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.medico }}</td>
                <td>{{ cita.paciente }}</td>
                <td>{{ cita.identificacion }}</td>
                <td>{{ cita.fechaCita ? cita.fechaCita|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn" href="{{ path('app_citas_show', {'id': cita.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn" href="{{ path('app_citas_edit', {'id': cita.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citas_new') }}">AÃ±adir</a>
    </div>
{% endblock %}
